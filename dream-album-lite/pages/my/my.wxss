page{
    background-color: #efeff4;
}
.allTop{
    position: relative;
}
.titleClass{
    position: absolute;
    height:150px;
    width:100%;
}
/* + */
.insertClass{
    position: absolute;
    width:100rpx;
    height:100rpx;
    z-index: 10;
    right:30rpx;
}
.userinfo-avatar {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-top:55px;
  margin-left: calc(50% - 30px);
}
/*no pic*/
.nopicClass{
    position: absolute;
    top:230px;
    left:calc(50% - 60px);
    width:120px;
    height:130px;
}
/*模版列表*/
.mobileListBorder{
    padding-top:150px;
}
.main{
    display:flex;
    flex-wrap: wrap;
}
.subMain{
    padding:5% 0px;
}
.subMainImage{
    height:100%;
    width:90%;
    margin-left: 6.5%;
}
.subMainImage.on{
    margin-left: 3%;
}
.images{
    border-radius: 8px;
    width:100%;
    height:100%;
}
.subMainText{
    text-align: center;
    font-size: 14px;
    color:#353535;
    margin-top:6px;
    height: 22px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.subMainInput{
    text-align: center;
    font-size: 14px;
    color:#353535;
    margin-top:4px;
    background-color: rgba(222,222,222,0.5);
}

/*新的样式列表scrollview-x*/
.insertClassScroll{
    position: absolute;
    width:100rpx;
    height:120rpx;
    left: calc(50% - 50rpx);
    top:calc(100% - 65px);
    z-index: 10;
}
.scrollViewTop{
    padding-top:155px;
    white-space: nowrap; 
    display: flex;
}
.imageTop{
     display: inline-block;
}
.imagesScrollView{
    border-radius: 8px;
    width:460rpx;
    height:100%;
}
