<!--scroll-view-x  start-->
<view class="allTop" style="width:{{winWidth}}px;">
    <image class="titleClass" src="../../image/titleblue.png"/>
    <image class="userinfo-avatar" src="{{avatarUrl}}" background-size="cover"></image>
    <image style="display:{{nopichidden}}" class="nopicClass" src="../../image/nopicdefault.png" />
</view>
<!--模版列表-->
<scroll-view scroll-x="true" class="scrollViewTop" hidden="{{!picLoadFinish}}">
    <view class="imageTop"  wx:for="{{items}}" wx:key="items" style="height:{{winHeight-230}}px;margin-left: {{marginLeft}}rpx;margin-right:{{(index+1)==items.length?marginLeft:0}}rpx;">
         <view class="album_page background-one"></view>
        <view class="album_page background-two"></view>
        <view class="album_page background-three"></view>
        <image class="imagesScrollView" bindload="picLoad" bindtap="previewImage"  data-albumid="{{item.id==undefined?item.albumId:item.id}}" data-useralbumid="{{item.userAlbumId}}" src="{{item.cover}}" />
        <view class="album_page album_cover_bindline"></view>
    </view>
</scroll-view>
<image class="insertClassScroll" src="../../image/createNew.png" bindtap="viewTemplateList"/>
<!--scroll-view-x  end-->