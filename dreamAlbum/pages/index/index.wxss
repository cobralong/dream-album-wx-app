page{
    background-color: #efeff4;
}
/*模版列表*/

.main{
    display:flex;
    flex-wrap: wrap;
}
.subMain{
    padding:5% 0px;
    position:relative; 
}
.subMainImage{
    height:100%;
    width:90%;
    margin-left: 6.5%;
}
.subMainImage.on{
    margin-left: 3%;
}
.images{
    border-radius: 16rpx;
    width:100%;
    height:100%;
}
.subMainText{
    text-align: center;
    font-size: 28rpx;
    color:#353535;
    margin-top:12rpx;
}

.bottomBar{
    position: absolute;
    display: flex;
    top:84%;
    height:10%;
    width:90%;
    left:6.5%;
    background-color: rgba(0, 0, 0, 0.4);
    border-bottom-right-radius:10rpx;
    border-bottom-left-radius:10rpx;
}
.bottomBar.on{
    left:3%;
}
.createImage{
    width:36rpx;
    height:32rpx;
}
.viewImage{
    width:36rpx;
    height:32rpx;
}

.bottomImage{
    width:45%;
    text-align: left;
    flex: 3;
    display: flex;
    flex-wrap: wrap;
}
.bottomImageText{
    width:50%;
    font-size: 28rpx;
    color:#fff;
    text-align: right;
    padding-top:5%;
}
.bottomImagePicHead{
    width:50%;
    padding-top:2%;
}
.lineImage{
    width:5%;
    height:100%;
}
.lineImagePic{
    height:100%;
    width:2rpx;
}
