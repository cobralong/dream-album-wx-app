.page{
    background-color: #efeff4;
}
.bottomClass{
    height:50px;
    width:100%;
    display: flex;
    box-sizing: border-box;
    position: fixed;
    z-index: 10;
}
.pptClass{
    width:50%;
    box-sizing: border-box;
    text-align: center;
    padding:10px;
    color: #353535;
    display: flex !important;
    flex-wrap: wrap;
    background-color: #00adef;
    filter:alpha(opacity = 66);  
    opacity: 0.66; 
}
.pptClass.ppt.on{
    filter:alpha(opacity = 100);   
    opacity: 1;
    color:#fff;
}
.pptClass.on{
    filter:alpha(opacity = 100);   
    opacity: 1;
    color:#fff;
}
