<import src="../../template/spacelineTemplate.wxml" />
<view hidden="{{!createHidden}}" bindtouchmove="hideCommentWindow">
<!--新的顶部-->
<view bindtap="changeCover">
    <image mode="scaleToFill" class="spacetimelineTopCoverImage" src="{{topData.cover}}"/>
</view>
<image class="spacetimelineTopIconImage" bindtap="showSpaceDetail" src="{{topData.icon}}" />
<!--亲友团-->
<view class="friends">
    <view class="friends-left">
        <image class="friends-left-avatarUrl" bindtap="showPersonalPage" wx:for="{{topData.occupantInfos}}" data-openid="{{item.openId}}" wx:key="occupantInfos" src="{{item.avatarUrl}}" />
    </view>
    <view class="friends-right"  bindtap="showAllFriends">
      <text>全部亲友团 ></text>
    </view>
</view>
<!--模版-->
<template is="spacetimelinelatest" data="{{spacetimelineList,winWidth,myOpenId}}"/>
<!--底部-->
<view class="bottom">
    <view class="bottomArea">
        <text>已经到底，没有更多啦～</text>
    </view>
</view>
<image src="../../image/addcontent.png"  class="createImg" bindtap="openCreatePage" hidden="{{!commentHidden && (topData.secert!=null)}}"/>
<view class="comment" hidden="{{commentHidden}}">
    <input bindblur="hideComment" class="commentText" value="{{commentDefaultValue}}" focus="{{commentFocus}}" type="text" placeholder="评论" />
    <image bindtap="saveComment" class="commentSendImage" src="../../image/sendcomment.png" />
</view>
</view>
