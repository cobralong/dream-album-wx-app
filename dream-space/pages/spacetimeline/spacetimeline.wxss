page{
  background-color: #f5f5f5;
}
.spacetimelineTop{
  position: relative;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 40rpx;
}
.spacetimelineBackground{
  width:100%;
  height:300rpx;
  background-color:#fff;
}
.spaceRecord{
  position: absolute;
  top:90rpx;
  left:20%;
  display: flex;
  flex-direction: column;
  color: #000;
}
.grayColor{
  color: #aaa;
}
.spaceFriend{
  position: absolute;
  top:90rpx;
  right:20%;
  display: flex;
  flex-direction: column;
  color: #000;
}
.iconImage{
  position: absolute;
  top:50rpx;
  left:calc(50% - 60rpx);
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  margin-bottom: 20rpx;
}
.spaceInfo{
  position: absolute;
  top:200rpx;
  left:5%;
  right:5%;
  width:90%;
}
.spaceInfoText{
  position: absolute;
  width:100%;
  left:0rpx;
  color: #aaa;
  line-height: 28rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.friends{
  height:100rpx;
  width:100%;
  display: flex;
  overflow: hidden;
  background-color: #fff;
  margin-top:10rpx;
}
.friends-left{
  width:60%;
  height: 100%;
  padding-left: 10rpx;
  padding-top:10rpx;
}
.friends-left-avatarUrl{
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
  border-radius: 50%;
}
.friends-right{
  width:35%;
  line-height: 100rpx;
  text-align: right;
  color: #aaa;
  font-size: 28rpx;
  padding-right: 5%;
}
.spacetimeline{
  margin-top:10rpx;
  background-color: #fff;
}
.userInfoArea{
  position: relative;
}
.nickName{
  color: #000;
  font-size: 36rpx;
  line-height: 36rpx;
  position: absolute;
  left:90rpx;
  top: 36rpx;
  width:30%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.date{
  width:200rpx;
  color: #000;
  font-size: 36rpx;
  line-height: 36rpx;
  position: absolute;
  left:calc(30% + 150rpx);
  top:36rpx;
}
.handle{
  width:80rpx;
  height:80rpx;
  position: absolute;
  left:calc(100% - 100rpx);
  top:10rpx;
}
.avatarUrl {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.spacetimelinebody{
  padding:20rpx;
}
.spacetimelineImageTop{
  display: flex;
  flex-direction: column;
}
.spacetimelineImage{
  width:100%;
  height:800rpx;
}
.spacetimelineImageDesc{
  font-size: 28rpx;
  line-height: 48rpx;
  margin-top:20rpx;
}
.spacetimelineContentText{
  font-size: 28rpx;
  line-height: 48rpx;
}
.timeline{
  padding:20rpx 0rpx 30rpx 25rpx;
  position: relative;
  border-bottom: 1px solid #f5f5f5;
}
.timebefore{
  font-size: 20rpx;
}
.collect{
  width:45rpx;
  height:45rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  position: absolute;
  right: 90rpx; 
}
.replay{
  width:45rpx;
  height:45rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  position: absolute;
  right: 0rpx;
}
.avatarCollectTop{
  margin-top:20rpx;
  padding-left:10rpx;
  display: flex;
  flex-wrap: wrap;
}
.avatarCollectImage{
  width:60rpx;
  height:60rpx;
  border-radius: 50%;
  margin: 10rpx;
}
.replayTop{
  padding:0rpx 20rpx 0rpx 20rpx;
  font-size: 28rpx;
  line-height: 48rpx;
}
.replayNickName{
  color: #11cd6e;
}
.bottom{
  height:300rpx;
  width:calc(100% - 40rpx);
  padding:50rpx 20rpx;
}
.bottomArea{
  text-align: center;
  font-size: 28rpx;
  width:100%;
  height:28rpx;
  color: #aaa;
}
.createImg{
  position: fixed;
  width:120rpx;
  height:120rpx;
  top:85%;
  right:1%;
}

/*记录宝宝成长每一天*/
.backgroundText{
  margin-top:30%;
  width:100%;
  text-align: center;
  font-size: 36rpx;
}
.controlArea{
  width:100%;
  margin-top:30%;
  display: flex;
}
.picArea{
  width:50%;
  display: flex;
  flex-direction: column;
}
.textArea{
  width:50%;
  display: flex;
  flex-direction: column;
}
.picAreaImage{
  padding-left:35%;
  width:180rpx;
  height:180rpx;
  margin-bottom: 20rpx;
}
.picAreaText{
  padding-left: 20%;
  text-align: center;
}
.textAreaImage{
  padding-left: 15%;
  width:180rpx;
  height:180rpx;
  margin-bottom: 20rpx;
}
.textAreaText{
  padding-right: 20%;
  text-align: center;
}
.del{
  position: absolute;
  width:90rpx;
  height:90rpx;
  top:calc(100% - 120rpx);
  left:calc(50% - 45rpx);
}
/*评论*/
.comment{
  position: fixed;
  top:calc(100% - 120rpx);
  right:1%;
  height:80rpx;
  padding:20rpx;
  width:calc(100% - 40rpx);
  display: flex;
  background-color: #fff;
  line-height: 80rpx;
}
.commentText{
  width: 86%;
  border: 1px solid #f5f5f5;
  box-sizing: border-box;
  height:100%;
  padding:20rpx;
  font-size: 28rpx;
}
.commentSend{
  width: 10%;
  margin-left: 3%;
}
.commentSendImage{
  height: 80rpx;
  width: 80rpx;
}