page{
  background-color: #f5f5f5;
}
.spacetimelineTop{
  position: relative;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 40rpx;
}
.spacetimelineBackground{
  z-index: 1;
  width:100%;
  height:300rpx;
  background-color:#40E0D0;
}
.spaceRecord{
  position: absolute;
  top:90rpx;
  left:10%;
  display: flex;
  flex-direction: column;
}
.spaceImage{
  position: absolute;
  top:50rpx;
  left:calc(50% - 60rpx);
  display: flex;
  flex-direction: column;
}
.spaceFriend{
  position: absolute;
  top:90rpx;
  right:10%;
  display: flex;
  flex-direction: column;
}
.iconImage{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  margin-bottom: 20rpx;
}
.friends{
  height:100rpx;
  width:100%;
  display: flex;
  overflow: hidden;
  background-color: #fff;
}
.friends-left{
  width:60%;
  height: 100%;
  padding-left: 10rpx;
  padding-top:10rpx;
}
.friends-left-avatarUrl{
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
  border-radius: 50%;
}
.friends-right{
  width:40%;
  line-height: 100rpx;
  text-align: center;
  color: #aaa;
}
.spacetimeline{
  margin-top:20rpx;
  background-color: #fff;
}
.userInfoArea{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.nickName{
  color: #aaa;
  margin-top:35rpx;
}
.avatarUrl {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.spacetimelinebody{
  padding:20rpx;
}
.spacetimelineImageTop{
  display: flex;
  flex-direction: column;
}
.spacetimelineImage{
  width:100%;
  height:800rpx;
}
.spacetimelineImageDesc{
  font-size: 28rpx;
  line-height: 48rpx;
  margin-top:20rpx;
}
.spacetimelineContentText{
  font-size: 28rpx;
  line-height: 48rpx;
}
.timeline{
  padding:20rpx 0rpx 30rpx 25rpx;
  position: relative;
  border-bottom: 1px solid #f5f5f5;
}
.timebefore{
  font-size: 20rpx;
}
.collect{
  width:45rpx;
  height:45rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  position: absolute;
  right: 90rpx; 
}
.replay{
  width:45rpx;
  height:45rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  position: absolute;
  right: 0rpx;
}
.avatarCollectTop{
  margin-top:20rpx;
  padding-left:20rpx;
  display: flex;
  flex-wrap: wrap;
}
.avatarCollectImage{
  width:60rpx;
  height:60rpx;
  border-radius: 50%;
  margin: 10rpx;
}
.replayTop{
  padding:0rpx 20rpx 0rpx 20rpx;
  font-size: 28rpx;
  line-height: 48rpx;
}
.replayNickName{
  color: #11cd6e;
}
.bottom{
  height:300rpx;
  width:calc(100% - 40rpx);
  padding:50rpx 20rpx;
}
.bottomArea{
  text-align: center;
  font-size: 28rpx;
  width:100%;
  height:28rpx;
  color: #aaa;
}
.createImg{
  position: fixed;
  width:120rpx;
  height:120rpx;
  top:85%;
  right:1%;
}

/*记录宝宝成长每一天*/
.backgroundText{
  margin-top:30%;
  width:100%;
  text-align: center;
  font-size: 36rpx;
}
.controlArea{
  width:100%;
  margin-top:30%;
  display: flex;
}
.picArea{
  width:50%;
  display: flex;
  flex-direction: column;
}
.textArea{
  width:50%;
  display: flex;
  flex-direction: column;
}
.picAreaImage{
  padding-left:35%;
  width:180rpx;
  height:180rpx;
  margin-bottom: 20rpx;
}
.picAreaText{
  padding-left: 20%;
  text-align: center;
}
.textAreaImage{
  padding-left: 15%;
  width:180rpx;
  height:180rpx;
  margin-bottom: 20rpx;
}
.textAreaText{
  padding-right: 20%;
  text-align: center;
}
.del{
  position: absolute;
  width:90rpx;
  height:90rpx;
  top:calc(100% - 120rpx);
  left:calc(50% - 45rpx);
}
/*评论*/
.comment{
  position: fixed;
  top:calc(100% - 120rpx);
  right:1%;
  height:80rpx;
  padding:20rpx;
  width:calc(100% - 40rpx);
  display: flex;
  background-color: #fff;
  line-height: 80rpx;
}
.commentText{
  width: 86%;
  border: 1px solid #f5f5f5;
  box-sizing: border-box;
  height:100%;
  padding:20rpx;
  font-size: 28rpx;
}
.commentSend{
  width: 10%;
  margin-left: 3%;
}
.commentSendImage{
  height: 80rpx;
  width: 80rpx;
}