page{
    background-color: #f5f5f5;
}
.personalImage{
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
    margin-left:calc(50% - 90rpx);
    margin-top:50rpx;
    border: 2px solid #fff;
}
.personalText{
    line-height: 28rpx;
    font-size: 28rpx;
    width:100%;
    text-align: center;
    margin-top:50rpx;
    color: #aaa;
    margin-bottom: 50rpx;
}
.recordArea{
    display: flex;
    background: #fff;
    height:120rpx;
    line-height: 120rpx;
    font-size: 36rpx;
    border-bottom: 1px solid #f5f5f5;
}
.leftArea{
    flex: 1;
    padding-left: 50rpx;
}
.rightArea{
    flex: 1;
    text-align: right;
    padding-right: 50rpx;
    color: #aaa;
}
.friendsNickName{
    display: flex;
    background: #fff;
    height:150rpx;
    line-height: 150rpx;
    font-size: 36rpx;
    margin-top:20rpx;
}
.exitFriendsButton{
    width:90%;
    background-color: red;
    margin-top:150rpx;
}