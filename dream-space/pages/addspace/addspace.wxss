page {
  background-color: gainsboro;
}

.image_area {
  position: relative;
  top: 0;
  width: 100%;
  height: 300rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.image_select_view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image_select_image {
  width: 150rpx;
  height: 150rpx;
  margin: 60rpx 0 20rpx;
  border-radius: 50%;
  background-color: white;
}

.image_select_camera {
  position: relative;
  top: -70rpx;
  left: 60rpx;
  width: 50rpx;
  height: 50rpx;
}

.input_area {
  width: 100%;
  background-color: white;
}

.input_cells {
  font-size: 30rpx;
}

.input_cell {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #d9d9d9;
}

.input_cell_hd {
  width: 200rpx;
  word-wrap: break-word;
  word-break: break-all;
  text-align: center;
}

.input_cell_bd {
  flex: 1;
  align-items: center;
}

.input {
  display: block;
  height: 1.4rem;
  text-overflow: clip;
  overflow: hidden;
  white-space: nowrap;
  min-height: 1.4rem;
}

.btn_area {
  padding: 0 5%;
  width: 90%;
  height: 180rpx;
}

.submit_btn {
  position: absolute;
  width: 90%;
  height: 100rpx;
  background: #139bea;
  color: #fff;
  margin-top: 80rpx;
}

.invite_input_area {
  width: 100%;
  background-color: white;
}

.invite_tips_area {
  width: 90%;
  padding: 5%;
  font-size: 24rpx;
  color: gray;
  line-height: 1.8;
}

.invite_btn_area {
  width: 90%;
  height: 110rpx;
  padding: 0 5%;
}

.invite_submit_btn {
  position: absolute;
  width: 90%;
  height: 100rpx;
  background: #139bea;
  color: #fff;
  margin-top: 10rpx;
}

.btn_hover {
  opacity: 0.7;
}
