  margin:20rpx 80rpx;
}

.itembottom{
  position: relative;
  margin:0 80rpx;
  height: 60rpx;
}
.icon{
  position: relative;
  top: -400rpx;
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin: 10rpx;
}
.votecount{
  position: relative;
  float: right;
  padding: 10rpx 20rpx;
  background-color: rgba(0,0,0, 0.5);
  color: white;
  border-radius:20rpx;
  border-top-right-radius: 0rpx;
}
.dot{
  width: 8rpx;
  height: 8rpx;
  background-color: white;
  border-radius: 4rpx;
  float: right;
  position: absolute;
  right: 8rpx;
  top: 8rpx;
}
.titlepart{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;

  margin:20rpx 80rpx;
  font-size: 35rpx;
  color:#888888;
  line-height:40rpx;
}
