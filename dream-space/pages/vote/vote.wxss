          flex: 1;
}

.description{
  font-size: 30rpx;
  margin-top:20rpx;
  color:#888888;
}

.item_root{
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #cccccc;
}

.bottom{
  height:150rpx;
  width:calc(100% - 40rpx);
  padding:50rpx 20rpx;
}
.bottomArea{
  text-align: center;
  font-size: 28rpx;
  width:100%;
  height:28rpx;
  color: #aaa;
}

.bottom_btn{
  width: 100%;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 10rpx 0;
  align-items: center;
  justify-content: center;
  background-color: rgba(255,255,255,0.9);
  position: fixed;
  border-top: 1rpx solid #eeeeee;
}
.hover_class{
