page{
    background-color: #f5f5f5;
}
.photoCreateArea{
    background-color: #fff;
    padding:20rpx 40rpx 40rpx 40rpx;
    width:calc(100% - 80rpx);
}
.photoCreateTop{
    width:100%;
    display: flex;
    margin-top:20rpx;
}
.photoCreateImage{
    width:300rpx;
    height:240rpx;
}
.photoCreateImageDesc{
    border: 1px solid #f5f5f5;
    box-sizing: border-box;
    height:240rpx;
    font-size: 28rpx;
    color: #aaa;
    margin-left: 30rpx;
    padding:20rpx;
}
.send{
    width:90%;
    background-color: #40E0D0;
    color: #fff;
    margin-top:20rpx;
}