<view class="all_views">
    <block class="listview" wx:for="{{activitylist}}" wx:key="{{id}}">
      <view class="item_root" bindtap="showdetail">
        <image class="img" mode="aspectFill" src="https://raw.githubusercontent.com/yanchunlei/res/master/ps/ps_0.png"></image>

        <view class="info_root">
          <view class="title_root">
            <view class="title">{{item.title}}</view>
            <image src="/image/icon.png" class="icon" catchtap="icontap"></image>
            <view class="numbox"><text class="txt">01</text></view>
            <view class="colonsplit">:</view>
            <view class="numbox"><text class="txt">12</text></view>
            <view class="colonsplit">:</view>
            <view class="numbox"><text class="txt">24</text></view>

          </view>
            <view class="description">{{item.description}}</view>
        </view>
      </view>
    </block>
</view>
