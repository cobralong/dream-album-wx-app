<view wx:if="{{!loadStatus}}" style="width:100%;height:{{windowHeight}}px;">
  <image hidden="{{!nopics}}" class="default_area_image" style="top:{{windowHeight*convertTimes/2-150}}rpx;" src="../../image/nopicdefault.png" />
</view>

<!--空间列表列表-->
<view hidden="{{showAddPage}}" wx:else class="main">
  <view id="{{idx}}" wx:for="{{items}}" bindtap="toSpace" wx:for-index="idx" class="sub_main">
    <view class="sub_main_image">
      <image mode="aspectFill" class="image" src="{{item.cover==null?'../../image/avatar3.jpg':item.cover}}" />
    </view>
    <view class="sub_main_info">
      <view class="time">
        <view class="time_line"></view>
        <text class="time_info">10 Jan.2017</text>
        <view class="time_line"></view>
      </view>
      <view class="name">{{item.name}}</view>
      <view class="desc">{{item.info==null?'主人没有什么介绍耶~':item.info}}</view>
    </view>
  </view>
</view>
<view hidden="{{more}}" class="nomoretips">
  <text>已经脱到底了...</text>
</view>
<view class="add_btn">
  <image bindtap="bindViewTap" src="../../image/add.png" style="z-index:3;" />
  <image bindtap="addSpace" data-way="1" src="../../image/spacebtn.png" animation="{{animationData1}}" hidden="{{isHidden1}}" style="z-index:1;width:100rpx;height:100rpx;" />
  <image bindtap="addSpace" data-way="2" src="../../image/invitebtn.png" animation="{{animationData2}}" hidden="{{isHidden2}}" style="z-index:2;width:100rpx;height:100rpx;" />
</view>

<!--添加阴影页面-->
<view hidden="{{!showAddPage}}" animation="{{animationData3}}" class="add_shadow_page" style="height:{{windowHeight}}px;">
  <view class="add_shadow_btnview" style="margin-top:{{windowHeight/2-50}}px;">
    <image bindtap="addSpace" data-way="1" src="../../image/spacebtn.png" style="width:150rpx;height:150rpx;margin:60rpx;" />
    <image bindtap="addSpace" data-way="2" src="../../image/invitebtn.png" style="width:150rpx;height:150rpx;margin:60rpx;" />
  </view>
  <image bindtap="bindViewTap" class="cancel_add" src="../../image/del.png"/>
</view>