@import '../spacetimeline/spacetimeline.wxss';
/*评论*/
.comment{
  position: fixed;
  top:calc(100% - 120rpx);
  right:1%;
  height:80rpx;
  padding:20rpx;
  width:calc(100% - 40rpx);
  display: flex;
  background-color: #fff;
  line-height: 80rpx;
}
.commentText{
  width: 86%;
  border: 1px solid #f5f5f5;
  box-sizing: border-box;
  height:100%;
  padding:20rpx;
  font-size: 28rpx;
}
.commentSend{
  width: 10%;
  margin-left: 3%;
}
.commentSendImage{
  height: 80rpx;
  width: 80rpx;
}